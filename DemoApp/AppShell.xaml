<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DemoApp"
    Shell.FlyoutBehavior="Flyout">

    <Shell.ItemTemplate>
        <DataTemplate>
            <StackLayout Orientation="Horizontal" Padding="50,12">
                <Image Source="{Binding FlyoutIcon}" HeightRequest="24" Margin="0,0,20,0"/>
                <Label Text="{Binding Title}" VerticalTextAlignment="Center" FontSize="16"/>
            </StackLayout>
        </DataTemplate>
    </Shell.ItemTemplate>
    
    <Shell.FlyoutHeader>
        <StackLayout>
            <Grid ColumnDefinitions="*, auto" HeightRequest="150" Padding="10">
                <Image Source="logo_res.png"  />
            </Grid>
            <BoxView HeightRequest="1" Color="#e1e1e1"  Margin="0,0,0,50"/>
        </StackLayout>
    </Shell.FlyoutHeader>
    <ShellContent
        Icon="/Icons/home.svg"
        Title="Главная"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Icon="/Icons/id_card.svg"
        Title="Аккаунт"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Icon="/Icons/cart.svg"
        Title="Заказы"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
</Shell>
